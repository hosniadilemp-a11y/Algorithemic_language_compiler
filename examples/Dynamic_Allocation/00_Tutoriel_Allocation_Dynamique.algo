Algorithme TutorielPointeurs;

Var
    p : ^Entier;      // D√©claration d'un pointeur sur un entier
    n : Entier;       // Une variable enti√®re simple

Debut
    Ecrire("=== üîó Tutoriel : Les Pointeurs ===\n");
    
    // 1. Pointage vers une variable existante
    n := 10;
    p := &n;         // p prend l'adresse de n (op√©rateur &)
    
    Ecrire("Valeur de n : ", n, "\n");
    Ecrire("Adresse de n (p) : ", p, "\n");
    Ecrire("Contenu point√© par p (p^) : ", p^, "\n");
    
    // 2. Modification via le pointeur
    Ecrire("\n--- Modification via le pointeur (p^ := 20) ---\n");
    p^ := 20;
    Ecrire("Nouvelle valeur de n : ", n, " (n a √©t√© modifi√© !)\n");
    Ecrire("Contenu point√© par p : ", p^, "\n");
    
    // 3. Observation du lien
    Ecrire("\n--- Modification de n (n := 30) ---\n");
    n := 30;
    Ecrire("Le contenu point√© par p a aussi chang√© : ", p^, "\n");
    
    // 4. Allocation Dynamique
    Ecrire("\n--- Allocation Dynamique (Allouer) ---\n");
    // On alloue de l'espace dans le tas (Heap)
    p := allouer(taille(Entier));
    p^ := 100;
    Ecrire("Nouvelle adresse dans le TAS : ", p, "\n");
    Ecrire("Valeur √† cette adresse : ", p^, "\n");
    
    // 5. Lib√©ration et NIL
    Ecrire("\n--- Lib√©ration (Liberer) et NIL ---\n");
    liberer(p);
    p := NIL;
    Ecrire("p est maintenant : ", p, " (NIL repr√©sente l'absence d'adresse)\n");

    Ecrire("\nFin du tutoriel.\n");
Fin.
